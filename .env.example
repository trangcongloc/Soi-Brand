# ===========================================
# Soi'Brand Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# -------------------------------------------
# REQUIRED: API Keys
# -------------------------------------------

# YouTube Data API v3 Key
# Get it from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Gemini API Key
# Get it from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# -------------------------------------------
# OPTIONAL: General Configuration
# -------------------------------------------

# Environment (development, production, test)
NODE_ENV=development

# Allowed origins for CORS (comma-separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Log level: silent, error, info, verbose
# Default: "info" in dev, "error" in prod
# LOG_LEVEL=info

# Encryption salt for client-side API key storage
# Change this in production for additional security (obfuscation only)
# NEXT_PUBLIC_ENCRYPTION_SALT=your-custom-salt-here

# Bundle analyzer (set to "true" to enable)
# ANALYZE=true

# -------------------------------------------
# OPTIONAL: Cloudflare D1 Database (VEO Feature)
# -------------------------------------------
# Required only if using VEO cloud database features
# Get these from: https://dash.cloudflare.com/

CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_D1_DATABASE_ID=your_d1_database_id
CLOUDFLARE_D1_API_TOKEN=your_d1_api_token

# Database Access Keys (comma-separated, multiple keys allowed)
# Generate secure keys: openssl rand -hex 32
# Example: key1,key2,key3
DATABASE_ACCESS_KEYS=your_secure_access_key
